---
import type { About } from "@/types/Resume"; // Import the About interface

interface Props {
  about: About;
}
const { about } = Astro.props;
---

<h3>About Me</h3>
<div class="flex flex-col md:flex-row items-center md:items-start">
  <div class="no-print px-4 md:px-8 mb-6 md:mb-0">
    <span class="profile-img" style={`background-image: url(${about.photo})`}
    ></span>
  </div>
  <div>
    <p class="text-left md:text-justify" set:html={about.summary} />
  </div>
</div>
<style>
  @import "tailwindcss";
  .profile-img {
    @apply w-[200px] h-[200px] /* Fixed dimensions */
           mx-auto block /* Centering */
           rounded-full /* Perfect circle */
           bg-cover bg-center bg-no-repeat /* Background image handling */
           shadow-inner shadow-gray-600/40 dark:shadow-gray-400/30 /* Modern inset shadow with dark mode */
           transition-transform duration-300 /* Smooth transform transitions */
           hover:scale-105 /* Subtle hover effect */
           object-cover /* Ensure image covers container */;
  }
</style>
